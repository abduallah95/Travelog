<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.juhani.thnibat.travelog.ProfileScreen">


<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/profile_cover"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/profilebg2" />

    <ImageView
        android:id="@+id/profile_pic"
        android:layout_width="148dp"
        android:layout_height="148dp"
        android:layout_above="@+id/linearLayout2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="83dp"
        android:src="@drawable/nopic"
        android:elevation="5dp"
        android:padding="20dp" />

    <RelativeLayout
        android:id="@+id/profile_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_cover"
        android:background="#851f8a"
        android:elevation="4dp"
        android:paddingBottom="24dp">

        <TextView
            android:id="@+id/fullname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="76dp"
            android:text="Fistname Lastname"
            android:textColor="#fff"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fullname"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:text="\@username"
            android:textColor="#fff"
            android:textSize="14sp" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_layout"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:id="@+id/linearLayout2">

        <TextView
            android:drawableLeft="@drawable/email"
            android:id="@+id/useremail"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#fff"
            android:clickable="true"
            android:elevation="4dp"
            android:padding="20dp"
            android:text="currentuser@email.com" />

        <TextView
            android:drawableLeft="@drawable/fromicon"
            android:id="@+id/currentloc"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#fff"
            android:clickable="true"
            android:elevation="4dp"
            android:padding="20dp"
            android:text="city, country" />

        <TextView
            android:drawableLeft="@drawable/bday"
            android:id="@+id/bday"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#fff"
            android:clickable="true"
            android:elevation="4dp"
            android:padding="20dp"
            android:text="10/10/1995" />


        <TextView
            android:drawableLeft="@drawable/phone"
            android:id="@+id/phoneno"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#fff"
            android:clickable="true"
            android:elevation="4dp"
            android:padding="20dp"
            android:text="+962799795433" />

        <Button
            android:layout_marginTop="5dp"
            android:id="@+id/logoutButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/ovalbuttonpurple"
            android:onClick="logOut"
            android:text="logout"
            android:layout_margin="10dp"
            android:textColor="#FFFF" />


    </LinearLayout>
</RelativeLayout>
    </ScrollView>